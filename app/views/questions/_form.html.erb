<%= @question.inspect %>
<%= form_with model: @question do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title, required: true, minlength: 3, placeholder: "Title" %>
  </div>
  <div>
    <%= f.label :body %>
    <%= f.text_area :body, required: true, minlength: 3 %>
  </div>
  <%= f.submit "Submit question!" %>
<% end %>